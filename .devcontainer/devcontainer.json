{
  "name": "Python 3.11 & Postgres 15",
  "containerEnv": {
    "TZ": "Asia/Seoul"
  },
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  // "features": {
  //   "ghcr.io/devcontainers/features/java:1": {
  //     "version": "17",
  //     "jdkDistro": "ms"
  //   }
  // },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",        // Python 자동완성
        "ms-python.vscode-pylance",  // 지능형 코드 분석
        "ckotzb.postgresql",        // VS Code에서 DB 바로 보기
        "GoogleCloud.cloudcode", // Gemini Code Assist가 포함된 확장
        "vscjava.vscode-java-pack"
        // "vmware.vscode-spring-boot"
      ],
      "settings": {
        "python.analysis.autoImportCompletions": true,
        "cloudcode.gemini.enable": true
      }
    }
  },
  "remoteUser": "vscode"
}
